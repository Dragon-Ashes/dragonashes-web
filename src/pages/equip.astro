---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Equipo · Dragon Ashes" description="Miembros del equipo Dragon Ashes">
  <h2 class="text-3xl font-bold mb-6">El equipo</h2>
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {[
      {name:"Jugador 1", rol:"Capitán"},
      {name:"Jugador 2", rol:"Blader"},
      {name:"Jugador 3", rol:"Blader"},
      {name:"Jugador 4", rol:"Blader"},
      {name:"Jugador 5", rol:"Blader"},
      {name:"Jugador 6", rol:"Coach"},
    ].map((p) => (
      <article class="rounded-2xl border border-white/10 p-5 bg-white/5">
        <h3 class="text-xl font-semibold text-white">{p.name}</h3>
        <p class="text-ashes-300">{p.rol}</p>
      </article>
    ))}
  </div>
</BaseLayout>
