---
const path = Astro.url.pathname;
const cls = (href) =>
  path === href
    ? "text-white font-semibold"
    : "text-ashes-300 hover:text-white";
---
<nav class="sticky top-0 z-50 bg-bg/80 backdrop-blur border-b border-white/10">
  <div class="container mx-auto px-4 h-14 flex items-center justify-between">
    <a href="/" class="font-extrabold tracking-wide text-xl text-white">
      Dragon <span class="text-brand">Ashes</span>
    </a>

    <!-- Desktop -->
    <div class="hidden md:flex items-center gap-6">
      <a href="/" class={`transition ${cls("/")}`}>Inicio</a>
      <a href="/equip" class={`transition ${cls("/equip")}`}>Equipo</a>
      <a href="/calendari" class={`transition ${cls("/calendari")}`}>Calendario</a>
      <a href="/videos" class={`transition ${cls("/videos")}`}>Vídeos</a>
      <a href="/contacte" class={`transition ${cls("/contacte")}`}>Contacto</a>
    </div>

    <!-- Móvil -->
    <details class="md:hidden relative">
      <summary class={`cursor-pointer select-none ${cls(path)}`}>Menú</summary>
      <div class="absolute right-0 mt-2 w-44 rounded-xl border border-white/10 bg-bg p-3 flex flex-col gap-2">
        <a href="/" class={cls("/")}>Inicio</a>
        <a href="/equip" class={cls("/equip")}>Equipo</a>
        <a href="/calendari" class={cls("/calendari")}>Calendario</a>
        <a href="/videos" class={cls("/videos")}>Vídeos</a>
        <a href="/contacte" class={cls("/contacte")}>Contacto</a>
      </div>
    </details>
  </div>
</nav>
