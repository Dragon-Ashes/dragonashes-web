---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Calendario y resultados · Dragon Ashes">
  <h2 class="text-3xl font-bold mb-6">Calendario y resultados</h2>
  <table class="w-full text-left border-separate border-spacing-y-2">
    <thead class="text-ashes-300">
      <tr><th class="px-3">Fecha</th><th class="px-3">Evento</th><th class="px-3">Resultado</th></tr>
    </thead>
    <tbody>
      <tr class="bg-white/5">
        <td class="px-3 py-2">—</td><td class="px-3 py-2">Añade próxima jornada</td><td class="px-3 py-2">—</td>
      </tr>
    </tbody>
  </table>
</BaseLayout>
